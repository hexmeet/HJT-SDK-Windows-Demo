<UserControl x:Class="EasyVideoWin.CustomControls.BrowserLoadingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyVideoWin.CustomControls"
             xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="White" />
        </Grid.Background>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image gif:AnimationBehavior.SourceUri="pack://application:,,,/Resources/Icons/loading.gif" Width="70" Height="70" />
            <TextBlock Text="{DynamicResource TRYING_TO_LOAD}"
                           Margin="0, 16, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#919191" FontSize="14"/>
        </StackPanel>
        
    </Grid>
</UserControl>
