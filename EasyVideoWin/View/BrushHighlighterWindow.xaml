                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" Grid.Column="0"  MouseLeftButtonDown="Color_Click" Name="yellow">
                    <Image x:Name="color_yellow" Width="30" Height="30" VerticalAlignment="Center">
                        <Image.Source>
                            <BitmapImage UriSource="pack://application:,,,/Resources/Icons/Content/Pen/Color/yellow_default.png"/>
                        </Image.Source>
                    </Image>
                    <Image x:Name="colorSelect_yellow" Width="30" Height="30" VerticalAlignment="Center" Visibility="Collapsed">
                        <Image.Source>
                            <BitmapImage UriSource="pack://application:,,,/Resources/Icons/Content/Pen/Color/yellow_selected.png"/>
                        </Image.Source>
                    </Image>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1" MouseLeftButtonDown="Color_Click" Name="green">
