<Window x:Class="EasyVideoWin.View.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyVideoWin.View"
        xmlns:customControls="clr-namespace:EasyVideoWin.CustomControls"
        mc:Ignorable="d"
        Title="ProgressDialog" Height="720" Width="1280"  
        ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Viewbox>
        <Grid Height="720" Width="1280" >
            <Grid.Background>
                <SolidColorBrush Color="White" Opacity="0.5" />
            </Grid.Background>
            <customControls:CircularProgressBar x:Name="progressRing" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Viewbox>
</Window>
