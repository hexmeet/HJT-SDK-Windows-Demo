                    </Image>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="2" MouseLeftButtonDown="Color_Click" Name="blue">
                    <Image x:Name="color_blue" Width="30" Height="30" VerticalAlignment="Center">
                        <Image.Source>
                            <BitmapImage UriSource="pack://application:,,,/Resources/Icons/Content/Pen/Color/blue_default.png"/>
